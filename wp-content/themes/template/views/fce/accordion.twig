<div class="fce-accordion" data-template="fce/accordion.twig">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        {% if fields.title %}
          <h2 class="fce-accordion-title">{{fields.title}}</h2>
        {% endif %}
        {% if fields.text %}
          <p>{{fields.text}}</p>
        {% endif %}
        <div class="fce-accordion-items">
          {% for items in fields.items %}
            <div class="fce-accordion-items-item">
              <div class="fce-accordion-items-item-heading">
                <a href="#" class="fce-accordion-items-item-heading-button">
                  {{items.title}}
                </a>
                {% include 'images/plus.svg' %}
                {% include 'images/minus.svg' %}
              </div>
              <div class="fce-accordion-items-item-text">
                {{items.text}}
                {% if items.image %}
                  <img class="img-fluid mb-2" src="{{TimberImage(items.image)|resize(800)}}" alt="{{TimberImage(items.image).alt}}">
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
